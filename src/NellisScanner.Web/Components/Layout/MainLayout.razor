@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-100">
    <div class="w-64 bg-gradient-to-b from-blue-900 to-purple-900 text-white">
        <NavMenu />
    </div>

    <div class="flex flex-col flex-1 overflow-hidden">
        <header class="bg-white shadow-xs">
            <div class="flex justify-end items-center h-14 px-4 border-b border-gray-200">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-blue-600 hover:underline">About</a>
            </div>
        </header>

        <main class="flex-1 overflow-auto p-6">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" class="hidden fixed bottom-0 w-full bg-yellow-100 p-4 z-50 shadow-md" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="cursor-pointer px-2 py-1 bg-blue-500 text-white rounded ml-2">Reload</a>
    <span class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer">🗙</span>
</div>
